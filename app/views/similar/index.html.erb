<h1>Similar Movies to: <%= @facade.movie.title %></h1>
<% @facade.similar_movies.each do |movie| %>
  <li class="img"><%= image_tag movie.poster_path %></li>
  <li class="title">Title: <%= movie.title %></li>
  <li class="description">Description: <%= movie.description %></li>
  <li class="release_date">Release Date: <%= movie.release_date %></li>
  <li class="vote_average">Vote Average: <%= movie.vote_average %></li>
<% end %>